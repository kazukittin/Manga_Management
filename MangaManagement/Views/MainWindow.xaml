<Window x:Class="MangaManagement.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:panels="clr-namespace:MangaManagement.Panels"
        mc:Ignorable="d"
        Title="Manga Bookshelf" Height="900" Width="1200"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        SizeChanged="Window_SizeChanged">
    <DockPanel>
        <Border DockPanel.Dock="Top" Background="#1E1E2E" Padding="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="ライブラリフォルダ"
                               Foreground="White"
                               FontSize="16"
                               FontWeight="SemiBold" />
                    <TextBlock Text="{Binding LibraryPath}" Foreground="White" />
                </StackPanel>
                <Button Grid.Column="1" Margin="8,0" Padding="12,6"
                        Command="{Binding BrowseLibraryCommand}">
                    フォルダを選択
                </Button>
                <Button Grid.Column="2" Padding="12,6"
                        Command="{Binding RefreshLibraryCommand}">
                    再読み込み
                </Button>
            </Grid>
        </Border>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ScrollViewer VerticalScrollBarVisibility="Auto" CanContentScroll="True">
                <ItemsControl x:Name="BooksItemsControl"
                              ItemsSource="{Binding MangaList}"
                              VirtualizingStackPanel.IsVirtualizing="True"
                              VirtualizingPanel.ScrollUnit="Pixel"
                              VirtualizingPanel.VirtualizationMode="Recycling">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <panels:VirtualizingWrapPanel
                                ItemWidth="{Binding DataContext.ItemWidth, RelativeSource={RelativeSource AncestorType=Window}}"
                                ItemHeight="{Binding DataContext.ItemHeight, RelativeSource={RelativeSource AncestorType=Window}}" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Command="{Binding DataContext.ItemClickCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}">
                                <Button.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="フォルダを開く"
                                                  Command="{Binding DataContext.OpenFolderCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                  CommandParameter="{Binding}" />
                                        <MenuItem Header="この作品をライブラリから除外"
                                                  Command="{Binding DataContext.RemoveFromLibraryCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                  CommandParameter="{Binding}" />
                                    </ContextMenu>
                                </Button.ContextMenu>
                                <Grid Width="{Binding DataContext.ItemWidth, RelativeSource={RelativeSource AncestorType=Window}}"
                                      Height="{Binding DataContext.ItemHeight, RelativeSource={RelativeSource AncestorType=Window}}">
                                    <Border CornerRadius="6" BorderBrush="#444" BorderThickness="1" Background="#2A2A3A" />
                                    <Grid Margin="8">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Border Grid.Row="0" Background="#111" CornerRadius="4">
                                            <Viewbox Stretch="Uniform">
                                                <Image Source="{Binding ThumbnailImage}" Stretch="Uniform" RenderOptions.BitmapScalingMode="HighQuality" />
                                            </Viewbox>
                                        </Border>
                                        <TextBlock Grid.Row="1" Margin="0,8,0,0" Text="{Binding Title}" TextAlignment="Center" TextWrapping="Wrap"
                                                   Foreground="White" FontWeight="SemiBold" />
                                    </Grid>
                                </Grid>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            <Border Grid.Row="1" Height="30" Background="#1E1E2E" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                <TextBlock Text="読み込み中..." Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" />
            </Border>
        </Grid>
    </DockPanel>
</Window>
